{
    "compilerOptions": {
        "experimentalDecorators": true,
        "jsx": "react",
        "module": "commonjs",
        "noEmitOnError": true,
        "noFallthroughCasesInSwitch": false,
        "noImplicitAny": true,
        "noImplicitUseStrict": true,
        "noUnusedLocals": true,
        "removeComments": false,
        "sourceMap": true,
        "declaration": true,
        "declarationDir": "./dist",
        "target": "es5",
        "lib": [
            "es5",
            "es6",
            "dom"
        ],
        "typeRoots": [
            "./node_modules/@types"
        ]
    },
    "exclude": [
        "dist/app.js",
        "dist/vendor.js"
    ]
}